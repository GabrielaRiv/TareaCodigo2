<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gabriela.tareacodigo.MainActivity"
    android:layout_margin="@dimen/bordes"
    android:paddingTop="@dimen/top">

    <TextView
        android:id="@+id/texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/bienvenida"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp" />

    <Button
        android:id="@+id/inicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:text="Ingresar"
        android:textSize="18dp"
        android:background="@color/Cyan"
        android:textColor="@color/Cyan1"/>

    <Button
        android:id="@+id/altos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/altos"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:padding="6dp"
        android:textSize="18dp"
        android:background="@color/Amber"
        android:textColor="@color/Amber1"/>

    <Button
        android:id="@+id/config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="@color/red"
        android:padding="6dp"
        android:text="@string/altos"
        android:textAllCaps="false"
        android:textColor="@color/Amber1"
        android:textSize="18dp" />

</LinearLayout>
